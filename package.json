{
  "name": "@ray.sx/backend",
  "description": "backend",
  "version": "0.0.0-development",
  "license": "GNU LGPL",
  "private": true,
  "type": "module",
  "engines": {
    "node": "19.9.0"
  },
  "scripts": {
    "copyfiles": "copyfiles -u 1 src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,json,csv,yml} dist/",
    "pre:debug": "yarn copyfiles && yarn build:server",
    "prestart": "docker compose up -d",
    "start": "nodemon --watch './src/**/*.ts' --ignore './prisma/**/*' --exec 'node --loader @bleed-believer/path-alias -r dotenv/config -r tsconfig-paths/register' src/index.ts",
    "build:payload": "dotenv payload build",
    "build:server": "tsc",
    "build": "rm -rf dist build && yarn copyfiles && yarn build:server",
    "build:docker": "yarn docker:build && yarn docker:push",
    "build:docker:stage": "yarn docker:build:stage && yarn docker:push:stage",
    "serve": "dotenv node dist/index.js",
    "generate:types": "dotenv payload generate:types",
    "docker:build": "docker buildx build --build-arg BUILD_ENV=production --platform linux/amd64 -t bardakdev/ray .",
    "docker:push": "docker push bardakdev/ray",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@liaoliaots/nestjs-redis": "^9.0.5",
    "@nestjs/common": "9.1.4",
    "@nestjs/core": "9.1.4",
    "@nestjs/event-emitter": "^1.3.1",
    "@nestjs/microservices": "9.1.4",
    "@nestjs/platform-express": "9.1.4",
    "@nestjs/platform-socket.io": "^9.1.4",
    "@nestjs/schedule": "2.1.0",
    "@nestjs/swagger": "6.1.2",
    "@nestjs/websockets": "^9.1.4",
    "@payloadcms/plugin-form-builder": "1.0.7",
    "@payloadcms/plugin-nested-docs": "1.0.3",
    "@payloadcms/plugin-seo": "1.0.8",
    "@prisma/client": "4.13.0",
    "@stigma.io/nestjs-oraq": "^0.2.5",
    "bcrypt": "5.0.1",
    "bignumber.js": "9.1.1",
    "body-parser": "^1.20.1",
    "cache-tags": "2.9.1",
    "chalk": "^5.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "connect-redis": "6.1.3",
    "cookie": "^0.5.0",
    "cookie-parser": "1.4.6",
    "copyfiles": "2.4.1",
    "cors": "2.8.5",
    "date-fns": "^2.29.3",
    "escape-html": "^1.0.3",
    "express": "4.18.1",
    "express-session": "1.17.3",
    "got": "11.8.5",
    "ioredis": "^5.3.2",
    "lodash-es": "4.17.21",
    "md5": "^2.3.0",
    "nestjs-asyncapi": "^0.3.5",
    "p-all": "^5.0.0",
    "p-throttle": "^5.0.0",
    "qs": "6.11.0",
    "rxjs": "^7.8.1",
    "slate": "^0.94.0"
  },
  "devDependencies": {
    "@bleed-believer/path-alias": "^0.14.0",
    "@darraghor/eslint-plugin-nestjs-typed": "^3.20.5",
    "@types/connect-redis": "0.0.18",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.14",
    "@types/express-session": "1.17.5",
    "@types/lodash-es": "4.17.7",
    "@types/node": "18.8.2",
    "@types/node-cron": "3.0.4",
    "@types/redis": "4.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "dotenv-cli": "6.0.0",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "2.0.22",
    "prettier": "2.8.4",
    "prisma": "4.13.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.0.4"
  },
  "resolutions": {
    "node-gyp": "9.3.1"
  }
}
