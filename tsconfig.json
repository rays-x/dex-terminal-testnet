{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "noLib": false,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "jest",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "typings",
      "typings/typings.d.ts"
    ]
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "dist",
    "build",
    "tests",
    "**/*.spec.js",
    "node_modules",
  ],
  "ts-node": {
    "transpileOnly": true
  },
}
